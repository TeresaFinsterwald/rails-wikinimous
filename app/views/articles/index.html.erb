<ul>
  <% @articles.each do |article| %>
    <li>
      <%=link_to article.title, article_path(article) %>
      <%= link_to ('<i class="fas fa-trash-alt"></i>').html_safe,
        article_path(article),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
    </li>
  <% end %>
</ul>
<%= link_to "Add article", new_article_path %>
